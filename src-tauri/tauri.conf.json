{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Symphony",
  "version": "0.7.0",
  "identifier": "com.th3g3ntl3man.symphony",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Symphony",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 600,
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: http://asset.localhost data: blob:; media-src 'self' asset: http://asset.localhost blob:; connect-src 'self' ipc: http://ipc.localhost; style-src 'self' 'unsafe-inline'",
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["$HOME/**", "$AUDIO/**", "/home/**", "/tmp/**"]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "files": {
          "/usr/share/doc/symphony/README.md": "../README.md",
          "/usr/share/licenses/symphony/LICENSE": "../LICENSE"
        }
      },
      "rpm": {
        "epoch": 0,
        "release": "1",
        "files": {
          "/usr/share/doc/symphony/README.md": "../README.md",
          "/usr/share/licenses/symphony/LICENSE": "../LICENSE"
        }
      }
    }
  }
}
